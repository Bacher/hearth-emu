
if locals.id
   .card-wrap(
      data-id= id,
      class= (
         (base.type === H.CARD_TYPES['minion']?'minion':'') +
         (base.flags['need-battlecry-target']?' need-battlecry-target':'') +
         (flags['can-play']?' available':'')
      ))

      .card
         IMG(src="http://media-hearth.cursecdn.com/avatars/"+base.pic+".png")
         .cost(class=(cost>base.cost?'red':(cost<base.cost?'green':'')))= cost
else
   .card-wrap
      .card
         IMG(src="cards/card_back.png")
